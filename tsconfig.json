{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "types": ["node", "mocha"],
      "typeRoots": ["../node_modules/@types", "./src/typings.d.ts"],
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "preserveWatchOutput": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }